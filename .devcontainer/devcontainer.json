// .devcontainer/devcontainer.json
{
    "name": "Kelvin App",
    // Use latest Python image
    "image": "python:latest",
    // VS Code extensions
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python", // Python support
                "ms-python.vscode-pylance" // Python language server
            ]
        }
    },
    // Run pip install
    "postCreateCommand": "pip install kelvin-sdk"
}